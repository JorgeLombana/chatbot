# Application Configuration
NODE_ENV=development
PORT=3000

# API Configuration
API_PREFIX=api
API_VERSION=v1

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MAX_REQUESTS_PER_MINUTE=60

# Open Exchange Rates Configuration
# Get your free API key from: https://openexchangerates.org/signup/free
# Free plan includes 1,000 requests/month, latest rates, 170+ currencies
EXCHANGE_RATES_API_KEY=your-32-character-app-id-here
EXCHANGE_RATES_CACHE_TTL=3600

# Data Configuration
PRODUCTS_CSV_PATH=data/Full Stack Test products_list.csv

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Request Timeout (milliseconds)
REQUEST_TIMEOUT=30000

# Enable/Disable Features
ENABLE_SWAGGER=true
ENABLE_RATE_LIMITING=true