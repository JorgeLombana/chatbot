# Application Configuration
NODE_ENV=development
PORT=3000

# API Configuration
API_PREFIX=api
API_VERSION=v1

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Open Exchange Rates Configuration
EXCHANGE_RATES_API_KEY=your-32-character-app-id-here

# Rate Limiting
OPENAI_MAX_REQUESTS_PER_MINUTE=60
EXCHANGE_RATES_CACHE_TTL=3600

# CSV Data Path
PRODUCTS_CSV_PATH=data/Full Stack Test products_list.csv

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Request Timeout (milliseconds)
REQUEST_TIMEOUT=30000

# Enable/Disable Features
ENABLE_SWAGGER=true
ENABLE_RATE_LIMITING=true